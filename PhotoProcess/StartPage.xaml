<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PhotoProcess.StartPage"
             Title="Test strip analyzer"
             BackgroundColor="White">

    <Grid RowDefinitions="*, *" 
          ColumnDefinitions="*"
          RowSpacing="20"
          Padding="30,50,30,30">


        <!-- 蓝色 -->
        <Button Text="​​Fluorescent Test Strip​"
                Grid.Row="0"
                BackgroundColor="#4CAF50" 
                TextColor="White"
                FontSize="20"
                CornerRadius="10"
                HeightRequest="120"
                Clicked="OnGrayscaleAnalysisClicked"/>

            <!-- 第三行：RGB分析按钮 -->
        <Button Text="Visual Test Strip"
                Grid.Row="1"
                BackgroundColor="#FF5722"
                TextColor="White"
                FontSize="20"
                CornerRadius="10"
                HeightRequest="120"
                Clicked="OnRGBAnalysisClicked"/>
    </Grid>
</ContentPage>