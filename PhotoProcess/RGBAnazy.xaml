<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:local="clr-namespace:PhotoProcess"
             x:Class="PhotoProcess.RGBAnazy"
             Title="RGB Analysis">

    <ScrollView>
        <VerticalStackLayout Padding="20,0" Spacing="10">
            <Image x:Name="selectedImage"
                   HeightRequest="300"
                   Aspect="AspectFit"/>
            <Button Text="Open"
                    Clicked="Button_Clicked"/>
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="5" RowSpacing="2">
                <Button x:Name="AutoModeButton" Text="Auto" 
                        Grid.Column="0" Grid.Row="2" Clicked="AutoModeButton_Clicked"/>
                <Button x:Name="SaveWaveformButton" Text="Save" 
                        Grid.Column="1" Grid.Row="2" Clicked="SaveWaveformButton_Clicked"/>
            </Grid>
            <Grid ColumnDefinitions="Auto,*,Auto" VerticalOptions="Center">
                <Label Text="Channel Select: " VerticalTextAlignment="Center" Grid.Column="0"/>

                <HorizontalStackLayout Grid.Column="1" Spacing="20" HorizontalOptions="Center">
                    <HorizontalStackLayout Spacing="5">
                        <CheckBox x:Name="RedCheckBox" 
                                  Color="Red" 
                                  IsChecked="True"
                                  CheckedChanged="OnChannelCheckedChanged"/>
                        <Label Text="R" TextColor="Red" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <CheckBox x:Name="GreenCheckBox" 
                                  Color="Green" 
                                  IsChecked="True"
                                  CheckedChanged="OnChannelCheckedChanged"/>
                        <Label Text="G" TextColor="Green" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Spacing="5">
                        <CheckBox x:Name="BlueCheckBox" 
                                  Color="Blue" 
                                  IsChecked="True"
                                  CheckedChanged="OnChannelCheckedChanged"/>
                        <Label Text="B" TextColor="Blue" VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </HorizontalStackLayout>
                <Label Grid.Column="2" Text=""/>
            </Grid>

            <Grid ColumnDefinitions="Auto,*" VerticalOptions="Center" Margin="0,10">
                <Picker x:Name="analysisModePicker"
                        Title="Choose Analysis Mode"
                        Grid.Column="1"
                        SelectedIndexChanged="OnAnalysisModeChanged">
                </Picker>
            </Grid>

            <skia:SKCanvasView x:Name="waveformCanvas"
                                HeightRequest="150"
                                PaintSurface="OnWaveformPaintSurface"
                               Touch="waveformCanvas_Touch"
                               EnableTouchEvents="True"/>
            <ActivityIndicator x:Name="ProcessingIndicator" 
                               IsVisible="False" 
                               IsRunning="False" 
                               HeightRequest="20"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>